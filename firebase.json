{
  "hosting": [
    {
      "site": "covid-fe4e1",
      "target": "ar",
      "public": "thanks",
      "rewrites": [
        {
          "source": "/stats/**",
          "destination": "/stats/"
        }
      ],
      "redirects": [
        {
          "source": "/countries/:post*",
          "destination": "/countries/stats",
          "type": 301
        }
      ],
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "cleanUrls": true,
      "trailingSlash": true
    },
